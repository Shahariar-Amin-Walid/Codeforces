#include<bits/stdc++.h>
#define sf scanf
#define pf printf
using namespace std;
int main( )
{
	int t;
	cin>>t;
	int a[t],b[t];
	int ac=0,bc=0;
	for(int i=0;i<t;i++){
		cin>>a[i]>>b[i];
		if(a[i]>0)ac++;
	}
	bc=t-ac;
	if(ac==t||ac==t-1||bc==t||bc==t-1){
		cout<<"YES\n";
	}
	else {
		cout<<"NO\n";
	}
  return 0;
}
